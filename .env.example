# LTM Application - Environment Variables
# Copy this file to .env and fill in your values for sensitive configuration

# External services
LTM_SEARX_HOST=http://127.0.0.1:8080

# Local LLM configuration
# Use this to set your Ollama host if not using the default http://localhost:11434
# OLLAMA_HOST=http://localhost:11434

# Model configuration
# LTM_MODEL_NAME=meta-llama/llama-4-maverick-17b-128e-instruct
MODEL_PROVIDER=groq
MODEL_NAME=llama3-70b-8192

# MongoDB (Atlas) connection example (replace <db_password>)
# Use either MONGODB_URI or LTM_MONGODB_URI
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=ltm_database
MONGODB_COLLECTION=memory_store

# Optional: legacy settings
LTM_MONGODB_DB=agent-memory
LTM_MONGODB_COLLECTION=memories

# Embedding Configuration
EMBEDDING_PROVIDER=huggingface
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384

# API Keys
OPENAI_API_KEY=
GROQ_API_KEY=
GOOGLE_API_KEY=
GEMINI_API_KEY=

# ============================================
# INTEGRATIONS - Crisis Escalation & Messaging
# ============================================

# Twilio (SMS/Voice Alerts)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=+1234567890

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# Telegram Bot
TELEGRAM_BOT_TOKEN=

# EHR (Electronic Health Records) Integration
EHR_API_URL=
EHR_API_KEY=

# ============================================
# EMERGENCY CONTACTS (for crisis escalation)
# ============================================
EMERGENCY_CONTACT_PHONE=
EMERGENCY_WHATSAPP_NUMBER=
EMERGENCY_TELEGRAM_CHAT=

# ============================================
# LIVE SESSION CONFIGURATION
# ============================================
LIVE_SESSION_ENABLED=false
DEFAULT_LIVE_MODE=camera

# ============================================
# BEHAVIORAL CONFIGURATION
# ============================================
# Selfie request interval in hours
SELFIE_REQUEST_INTERVAL_HOURS=24
# Random chance (0.0-1.0) to request selfie during conversation
SELFIE_RANDOM_CHANCE=0.1
# Mood threshold to trigger selfie request
SELFIE_REQUEST_MOOD_THRESHOLD=0.6

# Crisis detection threshold (0.0-1.0)
CRISIS_THRESHOLD=0.7

# Enable visual context analysis
ENABLE_VISUAL_CONTEXT=true
VISUAL_ANALYSIS_ENABLED=true

# Notification channels (comma-separated)
NOTIFICATION_CHANNELS=console,email

# Memory settings
MEMORY_RETENTION_DAYS=365
MAX_MEMORY_ENTRIES=1000

# Security
ENABLE_SECURITY_LOGGING=true